<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dip"
    tools:context="com.iut.gang.feigness.fragments.Fragment_session_create_log">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:text="@string/tilte_logSession"
        android:textColor="@color/gris" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:ems="10"
        android:hint="@string/entrer_session"
        android:inputType="number"
        android:textColor="@color/gris"
        android:textColorHint="@color/gris" />

    <Button
        android:id="@+id/btnLogSession"
        android:layout_marginTop="15dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_logSession"
        />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:text="@string/text_createSession"
        android:textColor="@color/gris" />

    <Button
        android:id="@+id/btnCreateSession"
        style="@style/button_text"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="40dip"
        android:layout_marginTop="40dip"
        android:layout_weight=".70"
        android:background="@drawable/main_button"
        android:elevation="100dp"
        android:text="@string/btn_createSession" />


</LinearLayout>
